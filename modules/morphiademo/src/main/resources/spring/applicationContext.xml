<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="
        http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-4.2.xsd
        http://www.springframework.org/schema/context
        http://www.springframework.org/schema/context/spring-context-4.2.xsd">

  <!-- 指定数据源的配置文件,此处指定了2个配置文件,分别指定数据库的连接信息和 Hibernate 数据源的配置信息 -->
  <bean id="propertyConfigurer" class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
    <property name="locations">
      <list>
        <value>classpath:hibernate/db.properties</value>
        <value>classpath:hibernate/config.properties</value>
        <value>classpath:collect/collect.properties</value>
        <value>classpath:morphia/morphia.properties</value>
      </list>
    </property>
  </bean>

  <!-- ********************************** 配置 Spring 对 Service 和 Dao 的管理 - Start ***************************** -->

  <!-- 自动扫描与装配 Service 和 Dao 层的 Bean -->
  <context:component-scan base-package="com.ninggc.morphiademo.morphia">
    <context:exclude-filter type="regex" expression=".*Controller$"/>
    <context:exclude-filter type="regex" expression=".*View$"/>
    <context:exclude-filter type="regex" expression=".*DAO$"/>
  </context:component-scan>

</beans>
